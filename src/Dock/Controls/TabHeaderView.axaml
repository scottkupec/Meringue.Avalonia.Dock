<UserControl
    x:Class="Meringue.Avalonia.Dock.Controls.TabHeaderView"
    xmlns="https://github.com/avaloniaui"
    xmlns:viewModels="clr-namespace:Meringue.Avalonia.Dock.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:DataType="viewModels:DockToolViewModel">

  <Grid ColumnDefinitions="*,Auto">
    <TextBlock Text="{Binding Header}" />
    <ToggleButton Content="{Binding IsPinned, Converter={StaticResource PinIconConverter}}"
                  Grid.Column="1"
                  IsChecked="{Binding IsPinned, Mode=TwoWay}" />
  </Grid>
</UserControl>
