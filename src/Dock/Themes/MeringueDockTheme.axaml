<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:converters="clr-namespace:Meringue.Avalonia.Dock.Converters"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="Meringue.Avalonia.Dock.Themes.MeringueDockTheme">

  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Themes/Converters.axaml" />
      </ResourceDictionary.MergedDictionaries>

      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
          <Color x:Key="MerginueAccentColor">SlateGray</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
          <Color x:Key="MerginueAccentColor">SlateGray</Color>
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Styles.Resources>

  <StyleInclude Source="/Themes/DockHostRoot.axaml" />
  <StyleInclude Source="/Themes/DockLayoutRoot.axaml" />
  <StyleInclude Source="/Themes/DockSplitPanel.axaml" />
  <StyleInclude Source="/Themes/DockTabPanel.axaml" />
  <StyleInclude Source="/Themes/DockTool.axaml" />
  <StyleInclude Source="/Themes/DockToolStub.axaml" />
  <StyleInclude Source="/Themes/TabHeaderView.axaml" />

</Styles>
