<DataTemplates
  xmlns="https://github.com/avaloniaui"
  xmlns:controls="clr-namespace:Meringue.Avalonia.Dock.Controls"
  xmlns:viewModels="clr-namespace:Meringue.Avalonia.Dock.ViewModels"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <DataTemplate DataType="viewModels:DockHostRootViewModel">
    <controls:DockHost DragDrop.AllowDrop="True"
                       Content="{Binding HostRoot}" />
  </DataTemplate>

  <DataTemplate DataType="viewModels:DockSplitNodeViewModel">
    <controls:DockSplitPanel HorizontalAlignment="Stretch"
                             Orientation="{Binding Orientation}"
                             VerticalAlignment="Stretch" />
  </DataTemplate>
  
  <DataTemplate DataType="viewModels:DockTabNodeViewModel">
    <Panel Background="Transparent"
           DragDrop.AllowDrop="True">
      <controls:DockTabPanel DragDrop.AllowDrop="True"
                             ItemsSource="{Binding PinnedTabs}" />
    </Panel>
  </DataTemplate>

  <DataTemplate DataType="viewModels:DockToolViewModel">
    <controls:DockTool Header="{Binding Header}" Content="{Binding Context}" />
  </DataTemplate>

  <DataTemplate DataType="viewModels:DockLayoutRootViewModel">
    <controls:DockLayoutRoot />
  </DataTemplate>

</DataTemplates>
