<Application
  x:Class="HelloLayout.App"
  xmlns="https://github.com/avaloniaui"
  xmlns:dock="clr-namespace:Meringue.Avalonia.Dock.Themes;assembly=Meringue.Avalonia.Dock"
  xmlns:dockContols="clr-namespace:Meringue.Avalonia.Dock.Controls;assembly=Meringue.Avalonia.Dock"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  RequestedThemeVariant="Dark">

  <Application.Styles>
    <FluentTheme DensityStyle="Compact" />
    <dock:MeringueDockTheme />

    <Style Selector="dockContols|DockTabPanel">
      <Setter Property="TabStripPlacement" Value="Left" />
    </Style>
  </Application.Styles>
</Application>
