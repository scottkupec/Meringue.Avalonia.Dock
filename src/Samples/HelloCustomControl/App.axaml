<Application
  x:Class="HelloCustomControl.App"
  xmlns="https://github.com/avaloniaui"
  xmlns:dock="clr-namespace:Meringue.Avalonia.Dock.Themes;assembly=Meringue.Avalonia.Dock"  
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="clr-namespace:HelloCustomControl.ViewModels"
  xmlns:controls="clr-namespace:HelloCustomControl.Controls"
  RequestedThemeVariant="Light">

  <Application.DataTemplates>

    <DataTemplate DataType="vm:SimpleDockToolViewModel">
      <controls:CustomControl />
    </DataTemplate>
  </Application.DataTemplates>  
  
  <Application.Styles>
    <FluentTheme DensityStyle="Compact" />
    <dock:MeringueDockTheme />
  </Application.Styles>
</Application>
